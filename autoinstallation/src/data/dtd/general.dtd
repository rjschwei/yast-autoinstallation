<!ELEMENT halt (#PCDATA)>
<!ATTLIST halt
	config:type CDATA #FIXED "boolean"
>

<!ELEMENT disable_abort (#PCDATA)>
<!ATTLIST disable_abort
	config:type CDATA #FIXED "boolean"
>
<!ELEMENT disable_buttons (#PCDATA)>
<!ATTLIST disable_buttons
	config:type CDATA #FIXED "boolean"
>

