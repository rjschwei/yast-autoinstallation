	<example>
	  <title>
	    Network configuration: /etc/hosts
	  </title>
	  <screen>
<![CDATA[
  <configure>
    <host>
      <hosts config:type="list">
        <host>
          <host_address>10.10.0.1</host_address>
          <names config:type="list">
            <name>foo.bar.com</name>
            <name>bar</name>
          </names>
        </host>
        <host>
          <host_address>10.10.0.2</host_address>
          <names config:type="list">
            <name>n1.bar.com</name>
            <name>n-one</name>
          </names>
        </host>
      </hosts>
    </host>
]]>
	  </screen>
	</example>